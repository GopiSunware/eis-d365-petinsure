# PetInsure360 Backend Configuration
# Copy to .env and fill in your values

# ===========================================
# Azure Data Lake Storage Gen2 (Bronze Layer)
# ===========================================
AZURE_STORAGE_ACCOUNT=petinsud7i43
AZURE_STORAGE_KEY=your_storage_key_here
AZURE_STORAGE_CONTAINER=raw

# ===========================================
# Azure Synapse Analytics (Gold Layer)
# ===========================================
# For reading analytics data from Gold layer
SYNAPSE_SERVER=petinsuresynapse-ondemand.sql.azuresynapse.net
SYNAPSE_DATABASE=petinsure_gold
SYNAPSE_USER=your_sql_user
SYNAPSE_PASSWORD=your_sql_password

# ===========================================
# API Configuration
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# CORS Origins (comma-separated for production)
CORS_ORIGINS=https://petinsure360frontend.z5.web.core.windows.net,https://petinsure360bi.z5.web.core.windows.net

# ===========================================
# Feature Flags
# ===========================================
# Set to true to use local CSV files instead of Synapse
USE_LOCAL_DATA=true

# Enable WebSocket real-time features
ENABLE_WEBSOCKET=true

# ===========================================
# Data Path (for local development)
# ===========================================
DATA_PATH=../data/raw
