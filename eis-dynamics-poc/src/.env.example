# ============================================================================
# EIS-D365 POC - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in the values for your environment.
# All service URLs and configurations are centralized here.
# ============================================================================

# -----------------------------------------------------------------------------
# ENVIRONMENT
# -----------------------------------------------------------------------------
ENVIRONMENT=dev
DEBUG=true
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# SERVICE PORTS (Local Development)
# -----------------------------------------------------------------------------
# WS2_PORT=8002
# WS3_PORT=8003
# WS5_PORT=8005
# WS6_PORT=8006
# WS7_PORT=8007
# WS8_PORT=8008
# FRONTEND_PORT=8000

# -----------------------------------------------------------------------------
# SERVICE URLs (Required for inter-service communication)
# -----------------------------------------------------------------------------
# For local development:
WS2_AI_CLAIMS_URL=http://localhost:8002
WS3_INTEGRATION_URL=http://localhost:8003
WS5_RATING_URL=http://localhost:8005
WS6_PIPELINE_URL=http://localhost:8006
WS7_DOCGEN_URL=http://localhost:8007
WS8_ADMIN_URL=http://localhost:8008

# EIS Mock API (hosted by WS3)
EIS_MOCK_URL=http://localhost:8003

# For WS6 Agent Pipeline
PETINSURE360_URL=http://localhost:8003
EIS_AI_CLAIMS_URL=http://localhost:8002
EIS_INTEGRATION_URL=http://localhost:8003

# For WS7 DocGen
CLAIMS_DATA_API_URL=http://localhost:8003

# -----------------------------------------------------------------------------
# CORS Configuration (comma-separated list of allowed origins)
# -----------------------------------------------------------------------------
# Leave empty to allow all origins (development only!)
# For production, specify exact origins:
# CORS_ORIGINS=https://your-frontend.com,https://admin.your-frontend.com
CORS_ORIGINS=

# -----------------------------------------------------------------------------
# AI PROVIDERS
# -----------------------------------------------------------------------------
# Anthropic Claude (primary)
ANTHROPIC_API_KEY=

# OpenAI (alternative)
OPENAI_API_KEY=

# Azure OpenAI (enterprise)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# AI Model Selection
AI_PROVIDER=claude
CLAUDE_MODEL=claude-sonnet-4-20250514
OPENAI_MODEL=gpt-4o

# -----------------------------------------------------------------------------
# AZURE SERVICES
# -----------------------------------------------------------------------------
# Key Vault
KEY_VAULT_URI=

# Dataverse / D365
DATAVERSE_URL=
DATAVERSE_CLIENT_ID=
DATAVERSE_CLIENT_SECRET=
DATAVERSE_TENANT_ID=

# Service Bus
SERVICE_BUS_NAMESPACE=
SERVICE_BUS_CONNECTION_STRING=

# Cosmos DB
COSMOS_DB_ENDPOINT=
COSMOS_DB_KEY=
COSMOS_DB_DATABASE=insurance-data

# Azure Storage
STORAGE_ACCOUNT_NAME=
STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONNECTION_STRING=

# Azure Document Intelligence (for DocGen OCR)
AZURE_FORM_RECOGNIZER_ENDPOINT=
AZURE_FORM_RECOGNIZER_KEY=

# -----------------------------------------------------------------------------
# REDIS (for WS6 Agent Pipeline event streaming)
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# STORAGE (Local Development)
# -----------------------------------------------------------------------------
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_PATH=/tmp/eis-poc/storage
