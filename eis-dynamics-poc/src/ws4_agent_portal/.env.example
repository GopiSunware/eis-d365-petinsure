# ============================================================================
# WS4 Agent Portal - Frontend Environment Configuration
# ============================================================================
# Copy this file to .env.local for local development
# All URLs must start with NEXT_PUBLIC_ to be available in browser
# ============================================================================

# -----------------------------------------------------------------------------
# Backend Service URLs
# -----------------------------------------------------------------------------

# WS3 Integration Service (EIS Mock - policies, claims, customers)
NEXT_PUBLIC_CLAIMS_API_URL=http://localhost:8003

# WS6 Agent Pipeline Service
NEXT_PUBLIC_PIPELINE_API_URL=http://localhost:8006
NEXT_PUBLIC_PIPELINE_WS_URL=ws://localhost:8006

# WS7 DocGen Service
NEXT_PUBLIC_DOCGEN_API_URL=http://localhost:8007

# WS5 Rating Engine Service (optional)
NEXT_PUBLIC_RATING_API_URL=http://localhost:8005

# WS2 AI Claims Service (optional)
NEXT_PUBLIC_AI_CLAIMS_API_URL=http://localhost:8002

# WS8 Admin Portal Backend (for shared authentication)
NEXT_PUBLIC_ADMIN_API_URL=http://localhost:8008

