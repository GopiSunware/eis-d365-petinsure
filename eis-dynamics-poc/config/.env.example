# =============================================================================
# EIS-D365 POC Environment Configuration
# =============================================================================
# Copy to .env.dev, .env.staging, or .env.prod and fill in values

# Environment
ENVIRONMENT=dev
DEBUG=true

# -----------------------------------------------------------------------------
# Azure Key Vault
# -----------------------------------------------------------------------------
KEY_VAULT_URI=https://kv-eisd365-dev.vault.azure.net/

# -----------------------------------------------------------------------------
# Dataverse / Dynamics 365
# -----------------------------------------------------------------------------
DATAVERSE_URL=https://your-org.crm.dynamics.com
DATAVERSE_CLIENT_ID=
DATAVERSE_CLIENT_SECRET=
DATAVERSE_TENANT_ID=

# -----------------------------------------------------------------------------
# Azure Service Bus
# -----------------------------------------------------------------------------
SERVICE_BUS_NAMESPACE=sb-eisd365-dev.servicebus.windows.net
SERVICE_BUS_CONNECTION_STRING=

# -----------------------------------------------------------------------------
# Azure Cosmos DB
# -----------------------------------------------------------------------------
COSMOS_DB_ENDPOINT=https://cosmos-eisd365-dev.documents.azure.com:443/
COSMOS_DB_KEY=
COSMOS_DB_DATABASE=insurance-data

# -----------------------------------------------------------------------------
# Azure Storage
# -----------------------------------------------------------------------------
STORAGE_ACCOUNT_NAME=steisd365dev
STORAGE_CONNECTION_STRING=

# -----------------------------------------------------------------------------
# Azure OpenAI
# -----------------------------------------------------------------------------
AZURE_OPENAI_ENDPOINT=https://oai-eisd365-dev.openai.azure.com/
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# -----------------------------------------------------------------------------
# Anthropic Claude (Alternative AI)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000"]
LOG_LEVEL=INFO
