# ===========================================
# ENVIRONMENT
# ===========================================
ENVIRONMENT=dev
DEBUG=true
LOG_LEVEL=INFO

# ===========================================
# SERVICE CONFIGURATION
# ===========================================
SERVICE_NAME=my-service
HOST=0.0.0.0
PORT=8000

# ===========================================
# STORAGE CONFIGURATION
# ===========================================
# Options: local | azure | s3
STORAGE_TYPE=local
STORAGE_PATH=./data

# Azure Storage (when STORAGE_TYPE=azure)
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_STORAGE_CONTAINER=raw

# AWS S3 (when STORAGE_TYPE=s3)
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# ===========================================
# AI PROVIDERS
# ===========================================
# Options: claude | openai
AI_PROVIDER=claude

# Anthropic Claude
ANTHROPIC_API_KEY=

# OpenAI
OPENAI_API_KEY=

# ===========================================
# SERVICE URLS
# ===========================================
# Local development URLs (change for production)
API_BASE_URL=http://localhost:8000

# ===========================================
# SECRETS MANAGEMENT (Production)
# ===========================================
# Azure Key Vault
KEY_VAULT_URI=

# AWS Secrets Manager
AWS_SECRET_NAME=

# ===========================================
# CORS
# ===========================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
